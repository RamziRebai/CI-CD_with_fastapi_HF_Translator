name: Docker Image CI/CD

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  #allow manually trigger
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Docker
      uses: docker/setup-docker@v1

    - name: Build Docker Image
      run: docker build -t deploy_translate -f Dockerfile .
    - name: Spin up Docker Image
      run: docker run --rm -p 8099:80 deploy_translate      
