name: Docker Build
on:
  #allow manually trigger
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest  # You can choose other OS environments too

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Login to Docker Hub (if using Docker Hub)
        # If you're using a private registry, add your login step here
        # This example assumes you're using Docker Hub
        run: docker login -u ${{ secrets.DOCKER_HUB_USERNAME }} -p ${{ secrets.DOCKER_HUB_PASSWORD }}

      - name: Build Docker image
        run: docker build -t deploy_translate:latest .

      - name: Push Docker image to Docker Hub (if using Docker Hub)
        # If you're using a private registry, push the image to your registry
        # This example assumes you're using Docker Hub
        run: docker push deploy_translate:latest
